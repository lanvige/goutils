#
# Text editor configuration
# =========================
#
# This file describes the end-of-line character, indentation and other rules for text files â€“ in a
# format compatible with most text editors. It really helps to have all that consistent, without
# manual labor. You'll probably want a plugin for your editor. Go get one from
# [editorconfig.org](http://editorconfig.org).
#


# top-most EditorConfig file
root = true


# General rules
# -------------
# - Unicode
# - Unix-style line endings
# - Newline before EOF
# - No sloppy trailing spaces
# - Two-space indentation

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


# Files that need whitespace at the end of lines
# ----------------------------------------------
# - Markdown

[*.md]
trim_trailing_whitespace = false

[*.{less,yml}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2


# The Lang must us tab
# ----------------------------------------------
# Golang with 4 space indentation

[*.go]
indent_style = tab
indent_size = 4

[*.tmpl]
indent_style = tab
indent_size = 2


